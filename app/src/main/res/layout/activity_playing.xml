<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darktransparent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar2"
            android:weightSum="1">
            <ImageView
                android:layout_width="@dimen/layout_24"
                android:layout_height="@dimen/layout_24"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/back_button"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Forever"
                    style="@style/NormalTextWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Stratovarius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="@dimen/layout_200"
                    android:layout_gravity="end"
                    android:src="@drawable/share"
                    android:layout_width="@dimen/layout_24"
                    android:layout_height="@dimen/layout_24" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_344" />
                </LinearLayout>


                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:text="4:32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"
                            android:layout_alignBottom="@+id/progressBar2"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:text="0:32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_alignBottom="@+id/progressBar2"
                            android:layout_toLeftOf="@+id/progressBar2"
                            android:layout_toStartOf="@+id/progressBar2" />

                        <ProgressBar

                            android:layout_width="@dimen/layout_280"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:id="@+id/progressBar2"
                            android:layout_marginLeft="@dimen/layout_8"
                            android:layout_marginRight="@dimen/layout_8"
                            android:max="100"
                            android:progress="50"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/textView5"
                            android:layout_toStartOf="@+id/textView5" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/layout_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/layout_24"
                        android:paddingRight="@dimen/layout_24"
                        android:weightSum="10">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                            <ImageView
                                android:layout_weight="2"
                                android:src="@drawable/shuttle"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/layout_24"
                                android:layout_height="@dimen/layout_24" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/prev"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:layout_width="@dimen/layout_24"
                                android:layout_height="@dimen/layout_24"
                                android:id="@+id/imageView3" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/play"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/layout_64"
                                android:layout_height="@dimen/layout_64"
                                android:id="@+id/imageView4" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_weight="2"

                                android:src="@drawable/next"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/layout_24"
                                android:layout_height="@dimen/layout_24"
                                android:id="@+id/imageView" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/repeat"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/layout_24"
                                android:layout_height="@dimen/layout_24"
                                android:id="@+id/imageView2" />
                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>





        </LinearLayout>


    </LinearLayout>

</LinearLayout>