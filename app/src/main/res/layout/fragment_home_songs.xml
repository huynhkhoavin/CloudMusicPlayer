<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_32">


        <TextView
            android:text="Total: 46 files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/layout_8"
            android:layout_marginStart="@dimen/layout_8" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/layout_24"
            android:layout_height="@dimen/layout_24"
            android:layout_margin="@dimen/layout_8"
            android:src="@drawable/three_line"
            android:scaleType="fitXY"
            android:id="@+id/three_dots"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>